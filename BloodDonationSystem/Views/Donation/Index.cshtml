@model EntityLayer.Concrete.Donation
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml"; }
<link href="~/web/css/style.css" rel='stylesheet' type='text/css' media="all" />

<body>
    <h1 class="header-agileits w3 w3l agile-info">Donation Form</h1>

    <div class="content-w3ls">
        <div class="form-w3layouts">
            @using (Html.BeginForm("Index", "Donation", FormMethod.Post))
            {
                <div class="form-group">
                   <label class="header">Blood Type <span>*</span> </label>      
                       <select name="okul" id="okul">
                           <option value="ilkokul">A+</option>
                           <option value="ortaokul">A-</option>
                           <option value="lise">B+</option>
                           <option value="universite">B-</option>
                           <option value="ilkokul">AB+</option>
                           <option value="ortaokul">AB-</option>
                           <option value="lise">0+</option>
                           <option value="universite">0-</option>
                       </select>
                  
               </div>
                <div class="form-group">
                    <label class="header">Hospital <span>*</span> </label>
                    <select name="okul" id="okul">
                        <option value="ilkokul">Buca Seyfi Demirsoy Hastanesi</option>
                        <option value="ortaokul">Özel Levent Hastanesi</option>
                        <option value="lise">Çanakkale Devlet Hastanesi</option>
                        <option value="universite">Özel Acıbadem Hastanesi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label class="header">Date <span>*</span> </label>
                    @Html.TextBoxFor(x => x.DonationDate, new { @class = "form-group" })
                    
                </div>
               
                  

               <button type="submit" class=btn btn-primary submit mb-4">DONATE </button>}                

            <!--<!--<div class="form-group">
            <label class="header">Phone Number <span>*</span> </label>

                    <!---->


        </div>
    </div>-->
</body>
































